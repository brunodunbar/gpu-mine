{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "lib",
    "baseUrl": "."
  }
}
